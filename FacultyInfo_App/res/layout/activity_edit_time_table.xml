<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditTimeTableActivity" >

    <TextView
        android:id="@+id/timeTT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/veranstaltungh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/timeTT"
        android:text="@string/eventTTh"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/veranstaltungd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/veranstaltungh"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/locationh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationd"
        android:layout_alignRight="@+id/veranstaltungh"
        android:layout_below="@+id/veranstaltungd"
        android:layout_marginTop="36dp"
        android:text="@string/locationTTh"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/locationd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/veranstaltungd"
        android:layout_below="@+id/locationh"
        android:ems="10" />

    <TextView
        android:id="@+id/descriptionh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationd"
        android:layout_below="@+id/locationd"
        android:layout_marginTop="36dp"
        android:text="@string/descriptionTTh"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/descriptiond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptionh"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/descriptionh"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/descriptiond"
        android:layout_below="@+id/descriptiond"
        android:layout_marginTop="36dp"
        android:text="@string/color"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/colorSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/descriptiond"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/color" />
    

</RelativeLayout>