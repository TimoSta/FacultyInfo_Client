            android:name="de.uni_passau.facultyinfo.client.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.BuslinesActivity"
