        <activity
            android:name="de.uni_passau.facultyinfo.client.ContactsActivity"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.TimetableActivity"
            android:label="@string/title_activity_timetable" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.FAQsActivity"
            android:label="@string/title_activity_faqs" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.SportsActivity"
            android:label="@string/title_activity_sports" >
