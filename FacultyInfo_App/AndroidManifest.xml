<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.uni_passau.facultyinfo.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.MainActivity"
            android:icon="@drawable/menu_icon"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.NewsActivity"
            android:label="@string/title_activity_news" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.BuslinesActivity"
            android:label="@string/title_activity_buslines" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.ContactsActivity"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.TimetableActivity"
            android:label="@string/title_activity_timetable" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.FAQsActivity"
            android:label="@string/title_activity_faqs" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.SportsActivity"
            android:label="@string/title_activity_sports" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.CafeteriaActivity"
            android:label="@string/title_activity_cafeteria" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.NewsTestActivity"
            android:label="@string/title_activity_news_test" >
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.DisplayNewsActivity"
            android:label="@string/title_activity_display_news"
            android:parentActivityName="de.uni_passau.facultyinfo.client.activity.NewsActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.uni_passau.facultyinfo.client.activity.NewsActivity" />
        </activity>
        <activity
            android:name="de.uni_passau.facultyinfo.client.activity.DisplayDayActivity"
            android:label="@string/title_activity_display_day" >
        </activity>
    </application>

</manifest>